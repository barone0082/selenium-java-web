public class ex3 {
	
	
	@Test
	public void itensNoCarrinho(){
	ConexaoWeb auxdriver = new ConexaoWeb();
	
	WebDriver driver = auxdriver.conexao();
		
	WebDriver wait = new WebDriver() {
		
